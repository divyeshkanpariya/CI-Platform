
@model IEnumerable<CI_Platform.Models.ViewModels.AdminUserTableViewModel>

<div class="border-bottom my-3">
    <div class="admin-table-heading pe-2">
        <h2>User</h2>
    </div>
</div>

<div class="my-4 d-flex justify-content-between align-items-center">
    <input class="form-control mr-2" type="search" id="searchUser" placeholder="Search" aria-label="Search"  style="width:300px;"/>
    <button type="button" onclick = "AddNewUser()" id="AddNewUser" class="Apply-mission-btn d-flex px-3 align-items-center text-decoration-none" ><i class="bi bi-plus-lg me-2"></i> Add</button>
</div>

<div id="admin-table" class="my-4" style="overflow:auto;">
    <table class="table border" id="myTimeTable">
        <thead>
            <tr>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Email</th>
                <th scope="col">Employee Id</th>
                <th scope="col">Department</th>
                <th scope="col" >Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in @Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.EmployeeId</td>
                        <td>@item.Department</td>
                    @if(@item.Status == "1")
                    {
                        <td style="color: #14C506">Active</td>
                    }else{
                        <td class="text-danger">Inactive</td>
                    }
                    
                        <td>
                            <i class="bi bi-pencil-square" style="color: #F88634;" onclick="editUser(@item.UserId)"></i>
                            <i class="bi bi-trash" itemid="deleteUser" onclick="deleteUser(@item.UserId)"></i>
                        </td>
                    </tr>
                }
                
        </tbody>
    </table>
</div>

@{
    int pageCount;
    if(@Model.FirstOrDefault().TotalUsers % 9 == 0)
    {
        pageCount = @Model.FirstOrDefault().TotalUsers / 9;
    }
    else    
    {
        pageCount = @Model.FirstOrDefault().TotalUsers / 9 +1;

    }
}
<div id="paginationContainer">
        
    <div class="pagination d-flex justify-content-end mt-5 mb-5" id="pagination">
    @if(@pageCount>1){
            <a id="fr"><img src="~/images/previous.png" alt="Previous" /></a>
            <a id="pre"><img src="~/images/left.png" alt="Previous" /></a>
            @for(var i= 1; i <= @pageCount; i++){
                @if (i == 1)
                {
                    <a  class="active pt-1" id="first">@i</a>
                }else{
                    <a class="pt-1">@i</a>
                }
            }

            <a id="next"><img src="~/images/right-arrow1.png" alt="Previous" /></a>
            <a id="last"><img src="~/images/next.png" alt="Previous" /></a>
            
        }
    </div>
        
</div>
<div class="modal fade" id="DeleteUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button type="button" class="close border-0 bg-white" data-dismiss="modal" aria-label="Close" onclick="dismissModal()">
                    <i class="btn-close"></i>
                </button>

            </div>
            
            <div class="modal-body">
             Are you sure you want to delete this item?   
                   <input type="hidden" value="" id="targetId"/>   
            </div>     
                        
            <div class="modal-footer">
                <button class="rec-btns px-4 text-muted" type="button" onclick="dismissModal()" style="width:fit-content" data-dismiss="modal">
                    <span class="ps-2">Cancel</span>
                </button> 
                <button type="button" onclick="deleteUserBtn()" class="Apply-mission-btn px-4">Delete</button>
            </div>
            
        </div>
    </div>
</div>
<script>

    function updatePagination(total,currIndex){
        var pagination = $("#pagination");
        var pages ;
        var text="";
        pagination.empty();

        if(total % 9 == 0){
            pages = total/9;
        }else{
            pages = total/9 + 1;
        }
        if(pages <2) return;
        console.log(pages);
        text += `<a id="fr"><img src="/images/previous.png" alt="Previous" /></a>
                <a id="pre"><img src="/images/left.png" alt="Previous" /></a>`;
        for(var i=1;i < pages;i++){
            console.log(i)
            if(i == currIndex){
                text += `<a  class="active pt-1" id="first">${i}</a>`;
            }else{
                text += `<a class="pt-1">${i}</a>`;
            }
        }
        text += `<a id="next"><img src="/images/right-arrow1.png" alt="Previous" /></a>
                <a id="last"><img src="/images/next.png" alt="Previous" /></a>`;
        console.log(text);
        pagination.html(text);
        applypagination();
    }

    function ShowUsers(pageIndex){
        var text = $("#searchUser").val();
        $.ajax({
            url: '/Admin/GetUpdatedUsers',
            type: 'POST',
            data: {SearchText: text,
            PageIndex: pageIndex},
            dataType: 'json',
            success:function (data) {
                console.log(data);
                var tbody = $("#myTimeTable tbody");
                tbody.empty();
                var optext = "";
                for(var i=0;i<data.length;i++){
                    optext += `<tr>
                            <td>${data[i].FirstName}</td>
                            <td>${data[i].LastName}</td>
                            <td>${data[i].Email}</td>
                            <td>${data[i].EmployeeId}</td>
                            <td>${data[i].Department}</td>`;
                    if(data[i].Status == "0"){
                        optext +=`<td class="text-danger">Inactive</td>`;
                    }else{
                        optext +=`<td style="color: #14C506">Active</td>`;
                    }
                    
                    optext += `<td>
                                <i class="bi bi-pencil-square" onclick="editUser(${data[i].UserId })" style="color: #F88634;"></i>
                                <i class="bi bi-trash" onclick="deleteUser(${data[i].UserId})"></i>
                            </td>
                        </tr>`;
                }
                tbody.html(optext);
                updatePagination(data[0].TotalUsers, Number(pageIndex));
            },
            error:function(err){
                console.log("errr");
            }
        });
    }

    function applypagination(){
        $("#pagination a").click( (e) =>{

            var pagination = document.getElementById("pagination").getElementsByTagName("a");
            if(e.target.id == "fr"){

                for(i=0;i<pagination.length;i++){
                    if(pagination[i].classList.contains("active")){
                        pagination[i].classList.remove("active");
                    }
                }
                document.getElementById("first").classList.add("active");
                ShowUsers("1");

            }else if(e.target.id == "last"){
                    
                    console.log("sds")
                for(i=0;i<pagination.length;i++){
                    if(pagination[i].classList.contains("active")){
                        pagination[i].classList.remove("active");
                    }
                }
                pagination[pagination.length - 3].classList.add("active");
                ShowUsers(pagination[pagination.length - 3].innerHTML);
                
            }else if(e.target.id == "next"){
                
                for(i=0;i<pagination.length;i++){
                    if(pagination[i].classList.contains("active")){
                        if(pagination[i].innerHTML != pagination[pagination.length - 3].innerHTML){
                            pagination[i].classList.remove("active");
                            pagination[i+1].classList.add("active");
                            ShowUsers(pagination[i+1].innerHTML);
                        }
                        break;
                    }
                        
                }
            
            }else if(e.target.id == "pre"){
                for(i=0;i<pagination.length;i++){
                    console.log(pagination[i])
                    if(pagination[i].classList.contains("active")){
                            
                        if(pagination[i].innerHTML != pagination[2].innerHTML){
                            console.log("not1st")
                            pagination[i].classList.remove("active");
                            pagination[i-1].classList.add("active");
                            ShowUsers(pagination[i-1].innerHTML);
                        }
                        break;
                    }
                        
                }
                    
            }else{
                $('#paginationContainer div a').each(function(){
                    var x = $(this);
                    if(x.hasClass('active')){
                        x.removeClass('active');
                    }
                });
                e.target.classList.add('active');
                ShowUsers(e.target.innerHTML);
            }
        });
    }
    
    $(document).ready( () => {
        document.getElementById("menu").getElementsByTagName("li")[1].classList.add("active");
        document.getElementById("menu").getElementsByTagName("li")[1].getElementsByTagName("a")[0].getElementsByTagName("img")[0].src = "/images/user-icon-active.png";
        $("#searchUser").keyup( () => {
            ShowUsers("1");
            var pagination = document.getElementById("pagination").getElementsByTagName("a");
            for(i=0;i<pagination.length;i++){
                if(pagination[i].classList.contains("active")){
                    pagination[i].classList.remove("active");
                }
            }
            document.getElementById("first").classList.add("active");
        });

        applypagination();
    });

    
</script>
