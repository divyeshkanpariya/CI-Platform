@model IEnumerable<CI_Platform.Models.ViewModels.AdminStoryTableViewModel>


<div class="alert alert-success" style="display:none;" id="success-alert">
   <strong>Success!</strong>
   <p class="mb-0"></p>
</div>
<div class="border-bottom my-3">
    <div class="admin-table-heading pe-2">
        <h2>Stories</h2>
    </div>
</div>

<div class="my-4">
    <input class="form-control mr-2" type="search" id="searchUser" placeholder="Search" aria-label="Search"  style="width:300px;"/>
</div>

<div id="admin-table" class="my-4" style="overflow:auto;">
    <table class="table border" id="myTimeTable">
        <thead>
            <tr>
                <th scope="col">Story Title</th>
                <th scope="col">Name</th>
                <th scope="col">Mission Title</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @if(@Model != null)
            {
                @foreach(var item in @Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        
                        <td>@item.FullName</td>
                        <td>@item.MissionTitle</td>
                    

                        <td class="align-items-center">
                            <a class="text-decoration-none text-small me-2 px-2 py-1 admin-story-viewbtn" asp-controller="Story" asp-action="PreviewStory" asp-route-sid = "@item.StoryId">View</a>
                            <i class="bi bi-check-circle me-2 status"  onclick="UpdateStatus(@item.StoryId,'PUBLISHED')"></i>
                            <i class="bi bi-x-circle me-2 text-danger" onclick="UpdateStatus(@item.StoryId,'DECLINED')"></i>
                            <i class="bi bi-trash"  onclick="UpdateStatus(@item.StoryId,'DELETE')"></i>
                        </td>
                    </tr>
                }
            }
              
        </tbody>
    </table>
</div>

@{
    int pageCount;
    if(@Model.FirstOrDefault().StoryCount % 9 == 0)
    {
        pageCount = @Model.FirstOrDefault().StoryCount / 9;
    }
    else    
    {
        pageCount = @Model.FirstOrDefault().StoryCount / 9 +1;

    }
}
<div id="paginationContainer">
        
    <div class="pagination d-flex justify-content-end mt-5 mb-5" id="pagination">
    @if(@pageCount>1){
            <a id="fr"><img src="~/images/previous.png" alt="Previous" /></a>
            <a id="pre"><img src="~/images/left.png" alt="Previous" /></a>
            @for(var i= 1; i <= @pageCount; i++){
                @if (i == 1)
                {
                    <a  class="active pt-1" id="first">@i</a>
                }else{
                    <a class="pt-1">@i</a>
                }
            }

            <a id="next"><img src="~/images/right-arrow1.png" alt="Previous" /></a>
            <a id="last"><img src="~/images/next.png" alt="Previous" /></a>
            
        }
    </div>
        
</div>
<div class="modal fade" id="StoryStatusUpdate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button type="button" class="close border-0 bg-white" data-dismiss="modal" aria-label="Close" onclick="dismissModal()">
                    <i class="btn-close"></i>
                </button>

            </div>
            
            <div class="modal-body">
             <p id="UpdateAppAlertText">Are you sure you want to delete this item?   </p>
                   <input type="hidden" value="" id="targetId"/>   
                   <input type="hidden" value="" id="targetStatus"/>   
            </div>     
                        
            <div class="modal-footer">
                <button class="rec-btns px-4 text-muted" type="button" onclick="dismissModal()" style="width:fit-content" data-dismiss="modal">
                    <span class="ps-2">Cancel</span>
                </button> 
                <button type="button" onclick="ConfirmAppBtn()" class="Apply-mission-btn px-4">Confirm</button>
            </div>
            
        </div>
    </div>
</div>

<script>
    function ConfirmAppBtn() {
        var id = document.getElementById("targetId").value;
        var Status = document.getElementById("targetStatus").value;
        console.log(Status,id);
        $.ajax({
            url: '/Admin/UpdateStoryStatus',    
            type: 'POST',
            data: {StoryId: id,
            Status: Status},
            success:function () {
                console.log("success")
                $("#StoryStatusUpdate").modal("hide");
                ShowUsers("1");
                if(Status == "PUBLISHED"){
                    document.getElementById("success-alert").getElementsByTagName("p")[0].innerHTML = "Story Approved Successfully";
                }else if(Status == "DECLINED"){
                    document.getElementById("success-alert").getElementsByTagName("p")[0].innerHTML = "Story Declined Successfully";
                }else if(Status == "DELETE"){
                    document.getElementById("success-alert").getElementsByTagName("p")[0].innerHTML = "Story Deleted Successfully";
                }
        
        
                $("#success-alert").alert().show();
                    window.setTimeout(function () { 
                    $("#success-alert").alert().hide(); 
                }, 1500);
                $("#fr").click();
            }
        });
        

    }

    function UpdateStatus(Id,Status){
        console.log(Status,Id)
        $("#StoryStatusUpdate").modal("show");
        document.getElementById("targetId").value = Id;
        document.getElementById("targetStatus").value = Status;
        if(Status == "PUBLISHED"){
            document.getElementById("UpdateAppAlertText").innerHTML = "Are you sure You want to PUBLISH this Story";
        }else if(Status== "DECLINED"){
            document.getElementById("UpdateAppAlertText").innerHTML = "Are you sure You want to DECLINE this Story";
        }else if(Status == "DELETE"){
            document.getElementById("UpdateAppAlertText").innerHTML = "Are you sure You want to DELETE this Story";
        }
        
    }
    function updatePagination(total,currIndex){
        var pagination = $("#pagination");
        var pages ;
        var text="";
        pagination.empty();
        
        if(total % 9 == 0){
            pages = total/9;
        }else{
            pages = total/9 + 1;
        }
        if(pages <2) return;
        
        text += `<a id="fr"><img src="/images/previous.png" alt="Previous" /></a>
                <a id="pre"><img src="/images/left.png" alt="Previous" /></a>`;
        for(var i=1;i <= pages;i++){
            
            if(i == currIndex){
                text += `<a  class="active pt-1" id="first">${i}</a>`;
            }else{
                text += `<a class="pt-1">${i}</a>`;
            }
        }
        text += `<a id="next"><img src="/images/right-arrow1.png" alt="Previous" /></a>
                <a id="last"><img src="/images/next.png" alt="Previous" /></a>`;
        
        pagination.html(text);
        applypagination();
    }

    function ShowUsers(pageIndex){
        console.log(pageIndex,"page")
        var text = $("#searchUser").val();
        $.ajax({
            url: '/Admin/GetUpdateStories',
            type: 'POST',
            data: {SearchText: text,
            PageIndex: pageIndex},
            dataType: 'json',
            success:function (data) {
                
                var tbody = $("#myTimeTable tbody");
                tbody.empty();

                
                var optext = "";
                for(var i=0;i<data.length;i++){
                    
                    optext += `<tr>
                            <td>${data[i].Title}</td>
                            <td>${data[i].FullName}</td>
                            <td>${data[i].MissionTitle}</td>
                            <td>
                                <a class="text-decoration-none text-small me-2 px-2 py-1 admin-story-viewbtn" href="/Story/PreviewStory?sid=${data[i].StoryId}">View</a>
                                <i class="bi me-2 bi-check-circle status"  onclick="UpdateStatus(${data[i].StoryId},'PUBLISHED')"></i>
                                <i class="bi me-2 bi-x-circle text-danger" itemid="deleteUser" onclick="UpdateStatus(${data[i].StoryId},'DECLINED')"></i>
                                 <i class="bi bi-trash" onclick="UpdateStatus(${data[i].StoryId},'DELETE')"></i>
                            </td>
                        </tr>`;
                }
                tbody.html(optext);
                updatePagination(data[0].StoryCount, Number(pageIndex));
            },
            error:function(err){
                console.log("errr");
            }
        });
    }

    function applypagination(){
        $("#pagination a").click( (e) =>{
            
            var pagination = document.getElementById("pagination").getElementsByTagName("a");
            if(e.target.id == "fr"){

                for(i=0;i<pagination.length;i++){
                    if(pagination[i].classList.contains("active")){
                        pagination[i].classList.remove("active");
                    }
                }
                document.getElementById("first").classList.add("active");
                ShowUsers("1");

            }else if(e.target.id == "last"){
                    
                for(i=0;i<pagination.length;i++){
                    if(pagination[i].classList.contains("active")){
                        pagination[i].classList.remove("active");
                    }
                }
                pagination[pagination.length - 3].classList.add("active");
                ShowUsers(pagination[pagination.length - 3].innerHTML);
                
            }else if(e.target.id == "next"){
                
                for(i=0;i<pagination.length;i++){
                    if(pagination[i].classList.contains("active")){
                        if(pagination[i].innerHTML != pagination[pagination.length - 3].innerHTML){
                            pagination[i].classList.remove("active");
                            pagination[i+1].classList.add("active");
                            ShowUsers(pagination[i+1].innerHTML);
                        }
                        break;
                    }
                        
                }
            
            }else if(e.target.id == "pre"){
                for(i=0;i<pagination.length;i++){
                    
                    if(pagination[i].classList.contains("active")){
                            
                        if(pagination[i].innerHTML != pagination[2].innerHTML){
                            
                            pagination[i].classList.remove("active");
                            pagination[i-1].classList.add("active");
                            ShowUsers(pagination[i-1].innerHTML);
                        }
                        break;
                    }
                        
                }
                    
            }else{
                $('#paginationContainer div a').each(function(){
                    var x = $(this);
                    if(x.hasClass('active')){
                        x.removeClass('active');
                    }
                });
                e.target.classList.add('active');
                ShowUsers(e.target.innerHTML);
            }
        });

    }

    $(document).ready( () => {
        $("#searchUser").keyup( () => {
            ShowUsers("1");
            var pagination = document.getElementById("pagination").getElementsByTagName("a");
            for(i=0;i<pagination.length;i++){
                if(pagination[i].classList.contains("active")){
                    pagination[i].classList.remove("active");
                }
            }
            document.getElementById("first").classList.add("active");
        });

        applypagination();
    });
</script>