@{
    Layout = "Home_Layout";
}
@model IEnumerable<CI_Platform.Models.ViewModels.PrivacyPolicyViewModel>
<style>
    body {
        position: relative; 
        min-height: 100vh;
    }
    footer {
        position: fixed;
        bottom:0px;
        width:100%;
        background-color:white;
    }
</style>
<div class=" mx-lg-5 mx-4 privacy-policy-page">
    <div class="mt-5 mb-3">
        <h1>Privacy and Cookies Policy</h1>
    </div>

    <div class="row gx-5">
        <div class="col-sm-3">       
            <div id="scrollspy1" class="sticky-top mt-3">
                <ul class="nav flex-column nav-pills menu-sidebar">
                    @foreach (var policy in @Model)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex justify-content-between border-bottom align-items-center" href="#@policy.Slug" style="font-size:18px;">@policy.Title
                                <i class="bi bi-chevron-right"></i>
                            </a>
                            
                        </li>
                    }

                </ul>
            </div>
        </div>
        <div class="col-sm-9 policy-content">
            <div data-mdb-spy="scroll" data-mdb-target="#scrollspy1" data-mdb-offset="0" class="scrollspy-example" >
                    @foreach(var policy in @Model)
                    {
                        <section class="py-4 border-bottom" id="@policy.Slug">
                            <h2 class="mb-3">@policy.Title</h2>
                            @Html.Raw(@policy.Description.Replace(@"\n",""))
                        </section>
                    }

            </div>
        </div>

    
    </div>
    @*</div>*@
</div>
<script>
    $(".nav-link").click(function(){
        $(".nav-link").css("color","#ADADAD");
        $(this).css("color","#333333");
    });
</script>