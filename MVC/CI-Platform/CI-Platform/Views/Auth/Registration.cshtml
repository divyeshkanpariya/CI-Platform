@model CI_Platform.Models.ViewModels.RegistrationViewModel;


@{
    Layout = "~/Views/Shared/Auth_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Registration Form</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/Style.css">
    <script src="./js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <form method="post" >
    <div class="registration-form">
        <div class="mb-3">
            <label asp-for="FirstName" for="firstName " class="form-label">First Name</label>
            <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="john" autofocus>
        </div>
        <div class=" mb-3">
            <label asp-for="LastName" for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="doe" autofocus>
        </div>
        <div class=" mb-3">
            <label asp-for="PhoneNumber" for="phoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" type="number" class="form-control" id="phoneNumber" placeholder="123456890" autofocus>
        </div>
        <div class=" mb-3">
            <label asp-for="Email" for="emailId" class="form-label">Email Address</label>
            <input asp-for="Email" type="email" class="form-control" id="emailId" placeholder="name@example.com" autofocus>
        </div>
        <div class=" mb-3">
            <label asp-for="Password" for="password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="********">
        </div>
        <input type="hidden" asp-for="CityId" value="1" />
            <input type="hidden" asp-for="CountryId" value="1" />
        <div class=" mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" placeholder="********">
        </div>
        <button type="submit" class="login-btn my-3">Register</button>

        <div class="text-center small my-3">
            <a style="text-decoration: none; color: #414141;" asp-area="" asp-controller="Auth" asp-action="Lost_Password">
                Lost your
                Password
            </a>
        </div>
        <div class="text-center small-text my-3">
            <span>Already have an Account?</span>
            <a style="text-decoration:none" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
        </div>
    </div>
    <div class="privacy-policy text-center small-text">
        <a style="text-decoration: none; color: #414141;" href="">Privacy Policy</a>
    </div>
    </form>

</body>

</html>