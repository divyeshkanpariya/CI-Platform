@model CI_Platform.Models.ViewModels.Lost_passwordViewModel
@{
    Layout = "~/Views/Shared/Auth_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Lost Password</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="./css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="./js/bootstrap.bundle.min.js"></script>
    <script src="./js/custom.js"></script>
</head>

<body>
    <form method="post">
    <div class="l-form">
            @*<div asp-validation-summary="All" class="text-dange"></div>*@
        <h3 class="text-center">Forgot Password</h3>
        <p class="text-center">
            Enter your email address you've using for your account below and we will send
            you a password reset link
        </p>
        <div class="mb-3 form-input">
            <label asp-for="Email" for="emailId" class="form-label">Email address</label>
            <input asp-for="Email" name="Email" type="email" class="form-control" id="emailId" placeholder="Enter Your Email Address" required>
            <span asp-validation-for="Email" class= "small-text text-danger"></span>
        </div>

        <button type="submit" id="resetPassword" class="login-btn my-3">Reset My Password</button>
        <div class="text-center small my-3">
            <a style="text-decoration: none; color: #414141;" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
        </div>
    </div>
    <div class="privacy-policy text-center small-text">
        <a style="text-decoration: none; color: #414141;" href="">Privacy Policy</a>
    </div>
    </form>
</body>
</html>