    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<script>
    $(document).ready(function(){
        console.log("ddd")
        
        $.ajax({
            url: '/Auth/getBanners',
            type: 'GET',
            data: {},
            dataType: 'json',
            success: function (data) {
                $("#demo").empty();
                var html = "";
                if(data.length >0){
                    html += `<div class="carousel-indicators">`;

                    for(var i=0;i<data.length;i++){
                        if(i==0){
                            html += `<button type="button" data-bs-target="#demo" data-bs-slide-to="${i}" class="active"></button>`;
                        }else{
                            html += `<button type="button" data-bs-target="#demo" data-bs-slide-to="${i}"></button>`;
                        }
                    }
                    html += `</div>
                        <div class="carousel-inner h-100">`;

                    for(var i=0;i<data.length;i++){
                        if(i==0){
                            html += `<div class="carousel-item active h-100">
                                        <img src="${data[i].Image}"
                                             alt="Los Angeles" class="d-block auth-img" style="width:100%">
                                        <div class="carousel-caption">
                                            <p class="img-heading">${data[i].Title}</p>
                                            <p class="img-discription">
                                                ${data[i].Text}
                                            </p>
                                        </div>
                                    </div>`;
                        }else{
                            html += `<div class="carousel-item h-100">
                                        <img src="${data[i].Image}"
                                             alt="Los Angeles" class="d-block auth-img" style="width:100%">
                                        <div class="carousel-caption">
                                            <p class="img-heading">${data[i].Title}</p>
                                            <p class="img-discription">
                                                ${data[i].Text}
                                            </p>
                                        </div>
                                    </div>`;         
                        }
                    }
                        
                    html +=`</div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>`;
                }
                $("#demo").html(html);
        

            }
        });
    })
</script>
</html>
